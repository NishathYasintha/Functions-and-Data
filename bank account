package bank

object bank {

  class account(b:Int){

    def balance = b


    def neg = new account(-balance)

    def +(a:account) = new account(this.balance + a.balance)

    def interest:Double = if(balance > 0) this.balance+this.balance*0.05 else this.balance-this.balance*0.1

    override def toString = ""+balance

  }

  def main(args: Array[String]): Unit = {

    var a1 = new account(200)
    var a2 = new account(500)
    var a3 = new account(-100)
    var a4 = a1+a2+a3


    println("negation of balance : "+a1.neg)
    println("sum of a1, a2, a3 = " + a4)
    println("a1 final balance = "+ a1.interest)
    println("a2 final balance = "+ a2.interest)
    println("a3 final balance = "+ a3.interest)
  }

}
